{
  "name": "pump-kit",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./simple": {
      "types": "./dist/types/simple.d.ts",
      "import": "./dist/simple.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "MIGRATION.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev:typecheck": "tsc -p tsconfig.json --noEmit",
    "build:js": "bun build ./src/index.ts --outdir dist --format esm --minify --sourcemap=external",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "rm -rf dist && bun run build:js && bun run build:types",
    "release:prepare": "bun run build && bun run test",
    "release:publish": "npm publish --access public",
    "release:dry-run": "npm publish --access public --dry-run",
    "codegen": "bun run scripts/codama-generate.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@codama/nodes-from-anchor": "^1.2.9",
    "@codama/renderers-js": "^1.4.2",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.2",
    "codama": "^1.3.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@solana-program/token": "^0.6.0",
    "@solana-program/token-2022": "^0.5.0",
    "@solana/kit": "^4.0.0",
    "@solana/spl-token": "^0.4.14",
    "buffer": "^6.0.3"
  }
}
